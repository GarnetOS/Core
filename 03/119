cd /sources
tar -xvf nano-5.8.tar.xz
cd nano-5.8
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --enable-utf8     \
            --docdir=/usr/share/doc/nano-5.8 &&
make
make install &&
install -v -m644 doc/{nano.html,sample.nanorc} /usr/share/doc/nano-5.8
rm -rf $LFS/sources/nano-5.8